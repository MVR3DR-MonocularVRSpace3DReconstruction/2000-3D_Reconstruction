{
    "name": "Open3D fragment reconstruction",

    "path_dataset": "data/redwood-boardroom/",
    "folder_fragment": "fragments/",
    "folder_scene": "scene/",
    "outputs_dir": "outputs/",

    "template_fragment_pointcloud": "fragments/fragment_pcd_%03d.ply",
    "template_fragment_posegraph": "fragments/fragment_posegraph_%03d.json",
    "template_fragment_posegraph_optimized": "fragments/fragment_posegraph_opti_%03d.json",
    
    "template_global_posegraph": "scene/template_global_posegraph.json",
    "path_intrinsic": "",

    "n_files_per_step": 1,
    "n_frames_per_fragment": 100,

    "down_sample": 1,
    "template_global_traj": "scene/global_traj.log",

    "template_refined_posegraph_optimized": "scene/template_refined_posegraph_optimized.json",
    "template_global_mesh": "scene/output_pcd.ply",

    "depth_scale":1000,
    "depth_max": 1000,
    "voxel_size": 0.05,
    "depth_diff_max": 0.07,

    "preference_loop_closure_odometry": 0.1,
    "preference_loop_closure_registration": 5.0,
    "tsdf_cubic_size": 3.0,
    "icp_method": "color",
    "global_registration": "dgr",
    "python_multi_threading": true,
    "python_multi_threading_reg": false
}
